<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Main Page</title>
</head>
<body>
  <%- include('./partials/nav') %>
  <div class="container mt-4">
    <h1 class="text-center">Welcome to the Portfolio Platform!</h1>

    <% if (user) { %>
      <p class="text-center">Hello, <strong><%= user.role %></strong>!</p>

      <div class="d-flex justify-content-center gap-3">
        <% if (user.role === 'admin') { %>
          <a href="/portfolio/admin" class="btn btn-primary">Manage Portfolio</a>
        <% } else if (user.role === 'editor') { %>
          <a href="/portfolio/editor" class="btn btn-primary">Create Portfolio Items</a>
        <% } %>
        <a href="/api/stock" class="btn btn-secondary">View Stock Data</a>
        <a href="/api/news" class="btn btn-secondary">View News Articles</a>
      </div>
    <% } else { %>
      <p class="text-center mt-4">Please <a href="/auth/login">log in</a> or <a href="/auth/register">register</a>.</p>
    <% } %>
  </div>

  <% items.forEach(item => { %>
    <div class="card mb-4 shadow">
      <div class="card-body">
        <h3 class="card-title"><%= item.title %></h3>
        <p class="card-text"><%= item.description %></p>

        <!-- Carousel for portfolio images -->
        <% if (item.images && item.images.length > 0) { %>
          <div id="carousel<%= item._id %>" class="carousel slide mb-3" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% item.images.forEach((image, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <img src="/<%= image %>" class="d-block w-100 rounded" alt="<%= item.title %>">
                </div>
              <% }) %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= item._id %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= item._id %>" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        <% } %>
      </div>
    </div>
  <% }) %>
</div>

  <%- include('./partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
